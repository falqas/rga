body {
  width: 100%;
  height: 100%;
  padding: 0;
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  font-size: 14px;
}

header {
  margin: 0;
  background-color: white;
  border-radius: 0px;
  border-bottom: 3px solid #bbb;
}

.logo {
    margin: 10px 15px;
    height: 50px;
}

.title {
    margin: 10px;
    vertical-align: middle;
    horizontal-align: middle;
}


.exhibits {
  position: relative; }

.exhibit {
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, 50%); }